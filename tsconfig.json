{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths":{
      "@router/*": ["./src/router/*"],
      "@store/*": ["./src/store/*"],
      "@types/*": ["./src/types/*"],
      "@components/*": ["./src/components/*"]
    },
  },
  "include": [
    "./src/**/*.ts",
  ],
}